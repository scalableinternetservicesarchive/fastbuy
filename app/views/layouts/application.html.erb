<!-- START:head -->
<!DOCTYPE html>
<html>
<head>
  <title>FastBuy Online Store</title>
  <%= stylesheet_link_tag    "application", media: "all",
    "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<!-- END:head -->
<body class="<%= controller.controller_name %>">
<div id="nav">
  <div id="page_nav">
    <%= link_to "Store", navigation_store_path %>
    <%= link_to "Sales", navigation_sales_path %>
    <%= link_to "Contact", navigation_contact_path %>
  </div>
  <div id="search">
      <%= form_tag products_path, :method => :get do %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "", :name => nil %>
    <% end %>
  </div>
  <div id="user">
    <% if buyer_signed_in? %>
      <%= link_to "#{current_buyer.email}", navigation_buyer_path %>
      <%= link_to 'Sign Out', destroy_buyer_session_path, method: :delete, data: { confirm: 'Are you sure?'} %>
     <%= link_to 'Cart', cart_path(id: current_buyer.cart_id) %>
    <% else %>
      <%= link_to 'Sign In', new_buyer_session_path %>
      <%= link_to 'Sign Up', new_buyer_registration_path %>
      <%= link_to 'Cart', cart_path(id: 'temp') %>
    <% end %>
  </div>
</div>
  <div id="columns">
    <div id="side">
<!-- START_HIGHLIGHT -->
      <!-- START:hidden_div -->
    <% if @cart.class == Cart %>
      <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
        <%= render @cart %>
      <% end %>
    <% elsif @cart.class == Hash %>
      <%= hidden_div_if(@cart.empty?, id: 'cart') do %>
        <%= render 'carts/cart' %>
      <% end %>
    <% end %>
    <!-- END:hidden_div -->
<!-- END_HIGHLIGHT -->
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>

